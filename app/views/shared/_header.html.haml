%head
%body
  %header.header
    .header-innner
      .clearfix
        %h1.logo-left
          %a{:href => "https:mercari.com/jp/"}
            =image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3703848211", width: 134, height: 36, alt: "mercari")
        %form.header-form.logo-right{:action => "https://www.mercari.com/jp/search/"}
          %input.input-default{:name => "keyword", :placeholder => "キーワードから探す", :type => "search", :value => ""}/
          %i.fas.fa-search
      .header-nav-box.clearfix
        %nav.logo-left
          %ul.header-nav
            %li
              %h2
                %a.header-nav-root{:href => "https://www.mercari.com/jp/category/"} カテゴリーから探す
            %li
              %h2
                %a.header-nav-root{:href => "https://www.mercari.com/jp/brand/"} ブランドから探す
        .logo-right
          %ul.header-login-nav
            %li
              = link_to 'ログイン', new_user_session_path, class: "sp-header-btn btn-red"
            %li
              = link_to '新規会員登録', new_user_registration_path, class: "sp-header-btn header-signup"
